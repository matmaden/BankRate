<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />

            <padding android:right="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/color_menu_unfriend_border_first" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/color_menu_unfriend_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="@color/color_menu_unfriend_background" />
        </shape>
    </item>

</layer-list>