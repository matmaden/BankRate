<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#9faecd" />
        </shape>
    </item>
    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#233456" />

            <size android:height="38dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#3f5c9a" />

            <padding
                android:bottom="1dp"
                android:top="1dp" />
        </shape>
    </item>

</layer-list>